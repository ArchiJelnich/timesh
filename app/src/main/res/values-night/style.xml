<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_header">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#C8C8C8</item>
    </style>

    <style name="style_header_2">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#C8C8C8</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/sec</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="style_main">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#9F9F9F</item>
        <item name="android:background">#353535</item>
    </style>

    <style name="style_button">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="style_edittext">
        <item name="colorControlNormal">#7E7E7E</item>
        <item name="colorControlActivated">#7E7E7E</item>
        <item name="colorControlHighlight">#7E7E7E</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="style_switch">
        <item name="colorControlActivated">@color/main</item>
        <item name="colorSwitchThumbNormal">@color/white</item>>
        <item name="android:colorForeground">@color/sec</item>
    </style>

</resources>


